---
import Container from "../components/Container.astro";
---

<section id="contact" class="bg-brand text-white">
  <Container class="relative">
    <div
      class="grid grid-cols-1 md:grid-cols-2 items-stretch border-l border-r border-[#E2E2E21A] relative pb-10"
    >
      <!-- Vertical Center Line -->
      <div
        class="hidden md:block absolute top-0 left-1/2 h-full w-0.5 bg-[#E2E2E21A] z-0"
        style="transform: translateX(-50%);"
      >
      </div>
      <!-- Left Side: Form -->
      <div
        class="bg-white rounded-br-[40px] px-4 sm:px-6 md:px-8 py-10 w-full shadow-lg pt-16 sm:pt-20 md:pt-24 flex items-center"
      >
        <form class="space-y-6 w-full">
          <input
            type="text"
            placeholder="Name"
            class="w-full border border-gray-200 focus:outline-none focus:border-brand px-4 py-3 text-sm rounded-md"
            required
          />
          <input
            type="email"
            placeholder="Email"
            class="w-full border border-gray-200 focus:outline-none focus:border-brand px-4 py-3 text-sm rounded-md"
            required
          />
          <input
            type="tel"
            placeholder="Phone"
            class="w-full border border-gray-200 focus:outline-none focus:border-brand px-4 py-3 text-sm rounded-md"
            required
          />
          <textarea
            placeholder="Message"
            class="w-full border border-gray-200 focus:outline-none focus:border-brand px-4 py-3 text-sm rounded-md"
            rows="4"></textarea>
          <button
            type="submit"
            class="w-full bg-brand text-white py-3 rounded-br-[16px] hover:bg-[#004B9E] transition font-semibold"
          >
            Submit
          </button>
        </form>
      </div>
      <!-- Right Side: Contact Info -->
      <div
        class="space-y-6 px-4 sm:px-10 md:px-24 pt-10 md:pt-0 w-full flex flex-col justify-end"
      >
        <p
          class="text-[28px] sm:text-[32px] text-white/70 font-light tracking-wide"
        >
          Contact us
        </p>
        <h2 class="text-[36px] sm:text-[44px] md:text-[56px] font-bold">
          Letâ€™s Get In Touch
        </h2>
        <p
          class="text-white/80 text-[18px] sm:text-[20px] md:text-[24px] max-w-md mb-6"
        >
          Fill in the form to know more about our services, our team will reach
          out to you soon!
        </p>
        <!-- Info Boxes -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- Calling Support -->
          <div class="flex flex-col bg-white text-brand h-full">
            <div class="flex items-start gap-3 h-full">
              <div
                class="bg-brand px-2 py-3 border-t-4 border-white flex-shrink-0"
              >
                <img
                  src="/icons/call.svg"
                  alt="Calling Support"
                  class="w-10 h-10"
                />
              </div>
              <div class="px-4 py-3 flex-1">
                <p class="text-sm font-semibold">Calling Support</p>
                <p class="text-sm text-gray-600">(+62)81 235 26512</p>
              </div>
            </div>
          </div>
          <!-- Email Information -->
          <div class="flex flex-col bg-white text-brand h-full">
            <div class="flex items-start gap-3 h-full">
              <div
                class="bg-brand py-3 px-2 border-t-4 border-white flex-shrink-0"
              >
                <img
                  src="/icons/mail.svg"
                  alt="Email Information"
                  class="w-10 h-10"
                />
              </div>
              <div class="px-4 py-3 flex-1">
                <p class="text-sm font-semibold">Email Information</p>
                <p class="text-sm text-gray-600">support@arcconstruction.com</p>
              </div>
            </div>
          </div>
          <!-- Office Location -->
          <div class="flex flex-col bg-white text-brand h-full">
            <div class="flex items-start gap-3 h-full">
              <div
                class="bg-brand py-3 px-2 border-t-4 border-white flex-shrink-0"
              >
                <img
                  src="/icons/map.svg"
                  alt="Office Location"
                  class="w-10 h-10"
                />
              </div>
              <div class="px-4 py-3 flex-1">
                <p class="text-sm font-semibold">Office Location</p>
                <p class="text-sm text-gray-600">Indiranagar</p>
              </div>
            </div>
          </div>
        </div>
        <!-- Stay Connected Bar: only half width on md+ screens -->
        <div class="mt-8 w-full">
          <div class="py-4 bg-brand text-white md:rounded-br-[40px]">
            <div
              class="bg-brand text-white px-2 sm:px-6 py-4 flex flex-col md:flex-row items-center justify-between border border-white rounded-br-[40px]"
            >
              <p class="font-medium mb-2 md:mb-0">Stay Connected</p>
              <div class="flex items-center gap-6 sm:gap-10">
                <a
                  href="#"
                  aria-label="Facebook"
                  class="hover:text-gray-200 transition"
                >
                  <img src="/icons/facebook.svg" alt="Facebook" />
                </a>
                <a
                  href="#"
                  aria-label="X (Twitter)"
                  class="hover:text-gray-200 transition"
                >
                  <img src="/icons/twitter.svg" alt="X (Twitter)" />
                </a>
                <a
                  href="#"
                  aria-label="LinkedIn"
                  class="hover:text-gray-200 transition"
                >
                  <img src="/icons/linkedin.svg" alt="LinkedIn" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Top Blue Bar -->
  </Container>
</section>
