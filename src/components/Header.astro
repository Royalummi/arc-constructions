---
const navItems = [
  { name: "Our Story", href: "#about" },
  { name: "Projects", href: "#projects" },
  { name: "Get in touch", href: "#contact" },
];
import Container from "../components/Container.astro";
---

<header
  x-data="{ open: false }"
  class="w-full absolute top-0 left-0 z-50 text-gray-900 py-6 px-2"
>
  <Container
    class="px-4 sm:px-6 lg:px-8 py-4 sm:py-6 flex flex-row items-center justify-between bg-white shadow-md rounded-lg"
  >
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img
        src="logo.svg"
        alt="ARC Constructions Logo"
        class="h-12 sm:h-16 w-auto"
      />
    </a>

    <!-- Desktop Navigation -->
    <nav
      class="hidden md:flex space-x-4 sm:space-x-10 text-base sm:text-lg tracking-wide font-medium items-center"
    >
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class={`hover:text-brand transition ${item.href === "#contact" ? "border border-black px-4 py-2 sm:px-4 sm:py-3 rounded-lg" : ""}`}
          >
            {item.name}
          </a>
        ))
      }
    </nav>

    <!-- Mobile Hamburger -->
    <div class="md:hidden ml-auto">
      <button @click="open = !open" class="focus:outline-none">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </Container>

  <!-- Mobile Menu -->
  <div
    x-show="open"
    x-transition
    class="md:hidden w-fit min-w-[160px] max-w-xs px-4 py-2 bg-white rounded-lg shadow-lg border border-gray-200 mt-2 float-right"
  >
    <nav class="flex flex-col space-y-2 text-base font-medium">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class={`hover:text-brand transition ${item.href === "#contact" ? "border border-black px-4 py-2 rounded-lg" : ""}`}
          >
            {item.name}
          </a>
        ))
      }
    </nav>
  </div>
</header>
